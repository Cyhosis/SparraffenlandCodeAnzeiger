{
  "manifest_version": 3,
  "name": "Promocode Extractor",
  "version": "1.1",
  "description": "Extrahiert Promocodes von Gewinnspielseiten (Sparraffenland, EDEKA, Brame.io)",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.brame.io/*",
        "*://campaigns.brame.io/*",
        "*://*.edeka.de/*",
        "*://edeka.go.link/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Promocode Extractor - Codes finden & kopieren"
  },
  "background": {
    "service_worker": "background.js"
  }
}